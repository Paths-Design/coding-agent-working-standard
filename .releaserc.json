{
  "branches": [
    "main"
  ],
  "repositoryUrl": "https://github.com/Paths-Design/coding-agent-working-standard.git",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false,
        "tarballDir": "dist",
        "pkgRoot": "packages/caws-cli"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json", "packages/caws-cli/package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "echo 'Version ${nextRelease.version} published to @paths.design scope'"
      }
    ]
  ]
}
