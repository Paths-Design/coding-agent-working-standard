{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    "coverage",
    "packages/caws-template",
    "apps"
  ]
}
