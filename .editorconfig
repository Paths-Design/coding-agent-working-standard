# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[packages/**/src/**/*.js]
indent_style = space
indent_size = 2

# Indentation override for all JS under lib directory
[packages/**/tests/**/*.js]
indent_style = space
indent_size = 2

# Indentation override for all JS under lib directory
[packages/**/apps/**/*.js]
indent_style = space
indent_size = 2

# Package.json files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# TypeScript files
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Documentation build artifacts
[docs/build/**/*]
insert_final_newline = false
trim_trailing_whitespace = false

# Generated files
[dist/**/*]
insert_final_newline = false
trim_trailing_whitespace = false

# Test output
[test-output/**/*]
insert_final_newline = false
trim_trailing_whitespace = false

# Coverage reports
[coverage/**/*]
insert_final_newline = false
trim_trailing_whitespace = false
