{
  "branches": [
    "main"
  ],
  "repositoryUrl": "https://github.com/Paths-Design/coding-agent-working-standard.git",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "type": "feat",
            "scope": "packages/caws-cli",
            "release": "minor"
          },
          {
            "type": "fix",
            "scope": "packages/caws-cli",
            "release": "patch"
          },
          {
            "type": "feat",
            "scope": "cli",
            "release": "minor"
          },
          {
            "type": "fix",
            "scope": "cli",
            "release": "patch"
          },
          {
            "type": "feat",
            "release": false
          },
          {
            "type": "fix",
            "release": false
          }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist",
        "pkgRoot": "packages/caws-cli",
        "provenance": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json", "packages/caws-cli/package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "echo 'Version ${nextRelease.version} published to @paths.design scope'"
      }
    ]
  ]
}

