{
  "name": "caws",
  "version": "1.0.0",
  "description": "CAWS - Coding Agent Workflow System (Turborepo)",
  "website": "https://paths.design",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "validate": "turbo run validate",
    "clean": "turbo run clean",
    "cli": "cd packages/caws-cli && npm run start",
    "scaffold": "cd packages/caws-cli && npm run start scaffold",
    "init": "cd packages/caws-cli && npm run start init",
    "release": "semantic-release",
    "caws:start": "node apps/tools/caws/start.js",
    "caws:validate": "node .caws/validate.js .caws/working-spec.yaml",
    "caws:verify": "npm run caws:validate && npm run typecheck && npm run lint && npm run test:unit -- --coverage && npm run test:contract && npm run test:integration && npm run test:e2e:smoke && npm run test:mutation && npm run test:axe && npm run perf:budgets",
    "caws:attest": "node apps/tools/caws/attest.js > .agent/attestation.json",
    "caws:prompt-lint": "node apps/tools/caws/prompt-lint.js .agent/prompts/*.md --allowlist apps/tools/caws/tools-allow.json",
    "caws:provenance": "node apps/tools/caws/provenance.js > .agent/provenance.json",
    "caws:pr-comment": "node apps/tools/caws/pr-comment.js",
    "codemod:dry": "node docs/*/codemod/refactor.js",
    "codemod:apply": "node docs/*/codemod/refactor.js --apply",
    "feature:start": "npm run caws:start",
    "refactor:start": "npm run caws:start -- --mode refactor",
    "fix:start": "npm run caws:start -- --mode fix"
  },
  "keywords": ["caws", "cli", "scaffolding", "agents", "workflow", "turborepo", "monorepo"],
  "author": "Paths Design <hello@paths.design>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Paths-Design/coding-agent-working-spec.git"
  },
  "packageManager": "npm@10.0.0",
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
