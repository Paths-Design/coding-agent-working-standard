{
  "name": "@paths.design/caws-cli",
  "version": "1.0.0",
  "description": "CAWS CLI - Coding Agent Workflow System command line tools",
  "main": "dist/index.js",
  "bin": {
    "caws": "dist/index.js"
  },
  "preferGlobal": true,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "mkdir -p dist && cp src/*.js dist/ && npm run typecheck",
    "dev": "mkdir -p dist && cp src/*.js dist/ && node dist/index.js",
    "typecheck": "tsc --emitDeclarationOnly --outDir dist",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest",
    "test:contract": "jest --testPathPattern=contract",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e:smoke": "jest --testPathPattern=e2e",
    "test:mutation": "jest --testPathPattern=mutation",
    "test:axe": "jest --testPathPattern=axe",
    "perf:budgets": "jest --testPathPattern=perf",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write src/**/*.js tests/**/*.js",
    "validate": "echo 'CLI package validation not required'",
    "clean": "rm -rf dist test-caws-project .agent"
  },
  "keywords": [
    "caws",
    "cli",
    "scaffolding",
    "agents",
    "workflow",
    "turborepo"
  ],
  "author": "Paths Design <hello@paths.design>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Paths-Design/coding-agent-working-spec.git",
    "directory": "packages/caws-cli"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "inquirer": "^9.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.2",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "chalk": "4.1.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.0.0",
    "js-yaml": "4.1.0",
    "lint-staged": "15.5.2",
    "prettier": "^3.0.0",
    "semantic-release": "24.2.9",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
